// Escribe un programa que calcule el
// precio final de un producto después de aplicar un descuento. Pide al
// usuario que ingrese el precio original y el porcentaje de descuento, y
// muestra el precio final.

let precioInicial = 20000;
let descuento = 40;

let descuentoAplicado = precioInicial * (descuento / 100);
let precioFinal = precioInicial - descuentoAplicado;

console.log("El valor del producto es $" + precioInicial + ", pero aplicamos un descuento del " + descuento +"% y el precio final sería $" + precioFinal);