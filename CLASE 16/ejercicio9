const prompt = require('prompt-sync')();

// Imagina que tienes una lista de palabras ['sol', 'luna', 'estrella']. Queremos
// saber cuántas letras hay en total entre todas las palabras. Por ejemplo,
// 'sol' tiene 3 letras, 'luna' tiene 4, y 'estrella' tiene 8. La suma total debería
// ser 15.

let listaPalabras = ['sol', 'luna', 'estrella'];

console.log("La lista inicial es:",listaPalabras);


const contarLetras = listaPalabras.reduce(function(acum,letra){
    return (acum + letra)
})

console.log("Si sumamos todas las letras de la lista, serían:",contarLetras.length);